#task2

#include <cstdio>
#include <cstdlib>
#include <iostream>
#include "_pause.h"

using namespace std;


int main() {
    // ************************** TO DO **************************
    // Place your code logic after this comment line
    // ***********************************************************
   
    //2.	Write a program that displays “Hello” in one line, and “World” in another line using exactly ten (10) COUT statements.
    cout << "H";
    cout << "e";
    cout << "l";
    cout << "l";
    cout << "o" << endl;
    cout << "W";
    cout << "o";
    cout << "r";
    cout << "l";
    cout << "d" << endl;

    // ********************** DO NOT CHANGE **********************
    // Print a new line and ask user for any key before exiting
    // ***********************************************************
    _pause();
    return EXIT_SUCCESS;
}

